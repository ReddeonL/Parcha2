<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Unirse_usuario">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_cargar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cargar"
                android:text="Cargar" />

            <TextView
                android:id="@+id/tw1"
                android:layout_width="match_parent"
                android:layout_height="59dp" />

            <Button
                android:id="@+id/btn_mostrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="mostrar"
                android:text="Mostrar" />

            <Button
                android:id="@+id/btn_unirse_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="unir_usuario"
                android:text="Unirse" />

            <Button
                android:id="@+id/btn_confirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="crear_unirse"
                android:text="Confirmar" />

            <ListView
                android:id="@+id/listviewact"
                android:layout_width="match_parent"
                android:layout_height="283dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>